pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Fetch Code') {
            steps {
                git branch: 'develop', url: 'https://github.com/iamangangwar/iiitv-devops-capstone.git'
            }
        }

        stage('Test Test Branch Dockerfile') {
            when {
                branch 'origin/develop'
            }
            steps {
                sh "docker build -t iamangangwar/iiitv-devops-capstone-test:${BUILD_NUMBER} ."
            }
        }

        stage('Build Test Image') {
            when {
                branch 'origin/develop'
            }
            steps {
                script {
                    sh "docker build -t iamangangwar/iiitv-devops-capstone-test:${BUILD_NUMBER} ."
                    sh "docker build -t iamangangwar/iiitv-devops-capstone-test:latest ."
                }
            }
        }
        
        stage('Upload Test Image') {
            when {
                branch 'origin/develop'
            }
            steps {
                script {
                    sh "docker login -u ${DOCKERHUB_CREDENTIALS_USR} -p ${DOCKERHUB_CREDENTIALS_PSW}"
                    sh "docker push iamangangwar/iiitv-devops-capstone-test:${BUILD_NUMBER}"
                    sh "docker push iamangangwar/iiitv-devops-capstone-test:latest"
                }
            }
        }
        
        stage('Deploy on Test Server') {
            when {
                branch 'origin/develop'
            }
            stages {
                stage('Run Ansible Playbook') {
                    steps {
                        ansiblePlaybook credentialsId: 'ansible-master', sudoUser:'root', disableHostKeyChecking: true, installation: 'ansible', inventory: 'hosts', playbook: 'test-deploy.yml'
                    }
                }
            }
        }

        stage('Test Production Dockerfile') {
            when {
                branch 'origin/master'
            }
            steps {
                sh "docker build -t iamangangwar/iiitv-devops-capstone-prod:${BUILD_NUMBER} ."
            }
        }

        stage('Build Production Image') {
            when {
                branch 'origin/master'
            }
            steps {
                script {
                    sh "docker build -t iamangangwar/iiitv-devops-capstone-prod:${BUILD_NUMBER} ."
                    sh "docker build -t iamangangwar/iiitv-devops-capstone-prod:latest ."
                }
            }
        }
        
        stage('Upload Production Image') {
            when {
                branch 'origin/master'
            }
            steps {
                script {
                    sh "docker login -u ${DOCKERHUB_CREDENTIALS_USR} -p ${DOCKERHUB_CREDENTIALS_PSW}"
                    sh "docker push iamangangwar/iiitv-devops-capstone-prod:${BUILD_NUMBER}"
                    sh "docker push iamangangwar/iiitv-devops-capstone-prod:latest"
                }
            }
        }
        
        stage('Deploy on Production Server') {
            when {
                branch 'origin/master'
            }
            steps {
                script {
                    try {
                        sh "docker service create \
                            --name site \
                            --publish published=80,target=80 \
                            --replicas 3 \
                            iamangangwar/iiitv-devops-capstone-prod:latest"
                    }
                    catch(e) {
                        sh "docker service update \
                            --image iamangangwar/iiitv-devops-capstone-prod:latest \
                            site"
                    }
                }
            }
        }

    }
    post {
        always {
            sh "docker logout"
        }
    }
}